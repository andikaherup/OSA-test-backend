{
  "name": "email-security-dashboard-backend",
  "version": "1.0.0",
  "description": "Backend API for email security monitoring dashboard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:dev": "docker compose up --build",
    "migrate:up": "npx node-pg-migrate up",
    "migrate:down": "npx node-pg-migrate down",
    "migrate:create": "npx node-pg-migrate create",
    "prepare": "husky install"
  },
  "keywords": [
    "email",
    "security",
    "dmarc",
    "spf",
    "dkim",
    "dashboard"
  ],
  "author": "Andika Heru Pratama",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "dotenv": "^16.3.1",
    "node-pg-migrate": "^8.0.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,yml}": "prettier --write"
  }
}
